@model CompanyIntranetPortal.Core.Entities.Vacancy

@{
    ViewData["Title"] = "VacancyDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <h4>Vacancy Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Position Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PositionName)
        </dd>
        <dt class = "col-sm-2">
            Job Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobDescription)
        </dd>
        <dt class = "col-sm-2">
            Due Date
        </dt>
        <dd class = "col-sm-10">
            @Model.DueDate.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Vacancies">Back to List</a>
</div>
