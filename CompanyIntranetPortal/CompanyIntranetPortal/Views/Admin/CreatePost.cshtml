@model PostViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreatePost" asp-controller="Admin" method="post" enctype="multipart/form-data">
            <div class="card card-outline card-info" style="display:flex;justify-content:center">
                <div class="card-header">
                    <h3 class="card-title">
                        Create Post
                    </h3>
                </div>
                <div class="card-sbody" style="width:80%;">
                    <div class=""><lable>Title</lable> <input asp-for="Title" style="margin-left: 100px;" form-control type="text" placeholder="..." /></div>
                    <div class=""><lable>Short Description</lable> <input style="margin-top: 5px; margin-left: 13px;" asp-for="ShortDescription" form-control type="text" placeholder="..." /></div>
                    <div class=""><lable>Content</lable></div>
                    <div><textarea asp-for="Content" id="summernote" style="display: none;"></textarea></div>
                    <br /><br />
                    <div class="">
                       <input asp-for="PostImage" placeholder="Choose an post image" type="file" />
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" type="submit">Create Post</button>
                    </div>
                </div>
        </form>
    </div>
</div>

@section Scripts{
<link href="summernote-bs5.css" rel="stylesheet">
<script src="summernote-bs5.js"></script>
<script>
        $(document).ready(function() {
      $('#summernote').summernote();
    });
</script>
}