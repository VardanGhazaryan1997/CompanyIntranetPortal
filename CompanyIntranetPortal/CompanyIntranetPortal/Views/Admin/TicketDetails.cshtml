@model CompanyIntranetPortal.Core.Entities.Ticket
@using static CompanyIntranetPortal.Helpers.Helper

@{
    ViewData["Title"] = "TicketDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <h4>Ticket Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.TicketType.Name
        </dd>
        <dt class="col-sm-2">
            Issue
        </dt>
        <dd class="col-sm-10">
            @Model.TicketIssue.Name
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Model.User.FirstName @Model.User.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPhone)
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            <span class="badge @(GetState(Model.TicketState) )">
                @Model.TicketState
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
