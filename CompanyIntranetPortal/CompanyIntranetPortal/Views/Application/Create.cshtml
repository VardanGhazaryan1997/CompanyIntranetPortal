@model CompanyIntranetPortal.Models.ApplicationViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4> Create Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
             <div class="form-group">
                <label asp-for="ApplicationType" class="control-label"></label>
                <select id="typesSelect" asp-for="ApplicationType" class="form-control" asp-items="@ViewBag.ApplicationTypes">
                    <option value="0">-- select one --</option>
                </select>
                <span asp-validation-for="ApplicationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-blue" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

