@model IEnumerable<CompanyIntranetPortal.Core.Entities.Ticket>
@using static CompanyIntranetPortal.Helpers.Helper

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Service Desk</h4>

<p>
    <a asp-action="CreateTicket">Create New Ticket</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketIssue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TicketType?.Name
                </td>
                <td>
                    @item.TicketIssue?.Name
                </td>
                <td>
                    <span class="badge @(GetState(item.TicketState) )">
                        @item.TicketState
                    </span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new {  id=item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>
