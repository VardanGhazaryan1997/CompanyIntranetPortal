@using CompanyIntranetPortal.Core.Entities
@model Post
@{
    ViewData["Title"] = "ReadPost";
}

<div class="card" style=" margin-bottom:10px ">
    <img class="card-img-top" src="@Model.ImgUrl" style="width:100%;height:250px;border:5px solid #F8F8F8; border-radius:10px " alt="Card image cap">
    <div class="card-body">
        <div class="card-title">
            <h3>
                @Model.Title
            </h3>
            <small class="text-muted">@Model.ShortDescription</small>
        </div>
        <div class="card-text" style="margin-top:20px">@Html.Raw(@Model.Content)</div>
    </div>
</div>
