@using CompanyIntranetPortal.Infrastructure.Models
@model List<PostWithLikes>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="action_row row d-flex align-items-center justify-content-center">
    <div class="action_col col-md-4">
        <a asp-action="Index" asp-controller="EForms">
            <img src="~/assets/img/icons8-google-forms-64.png" alt="E-Forms">
            <span>E-forms</span>
        </a>
    </div>
    <div class="action_col col-md-4">
        <a asp-controller="ServiceDesk" asp-action="Index">
            <img src="~/assets/img/icons8-online-maintenance-portal-96.png" alt="E-Forms">
            <span>Service Desk</span>
        </a>
    </div>
    <div class="action_col col-md-4">
        <a asp-controller="Application" asp-action="Index">
            <img src="~/assets/img/icons8-applications-64.png" alt="App">
            <span>Application</span>
        </a>

    </div>
</div>
<div class="row"></div>
<div class="row">
    <div class="w-100">
        @foreach (var item in Model)
        {
            <div class="card" style="margin-bottom:10px">
                <h5 class="card-header">@item.Title</h5>
                <img class="card-img-top" src="@item.ImgUrl" style="width:100%;height:300px;border:5px solid #F8F8F8; border-radius:10px " alt="Card image cap">
                <div class="card-body">
                    @*<h5 class="card-title">@item.ShortDescription</h5>*@
                    <p class="card-text">@item.ShortDescription</p>
                </div>
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="ReadPost" asp-controller="Posts" asp-route-id="@item.Id" style="cursor:pointer; text-decoration: none;">Read the post</a>
                        </div>
                        <div>
                            <a asp-action="LikePost" asp-controller="Posts" asp-route-id="@item.Id" style="cursor:pointer; text-decoration: none;">

                                @if (item.IsLiked)
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                                    </svg>
                                }
                                else
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                                    </svg>
                                }
                            </a>
                            <i>@item.LikesCount</i>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>