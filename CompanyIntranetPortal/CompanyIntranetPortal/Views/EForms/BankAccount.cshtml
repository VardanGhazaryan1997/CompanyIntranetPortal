@model CompanyIntranetPortal.Models.BankAcountViewModel

@{
    ViewData["Title"] = "BankAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Bank Account Changing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BankAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewAccountNumber" class="control-label"></label>
                <input asp-for="NewAccountNumber" class="form-control" />
                <span asp-validation-for="NewAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankName" class="control-label"></label>
                <input asp-for="BankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <textarea asp-for="Reason" class="form-control"></textarea>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-blue" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>